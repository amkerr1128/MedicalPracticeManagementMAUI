<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MedicalPracticeManagementMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MedicalPracticeManagementMAUI"
    xmlns:views="clr-namespace:MedicalPracticeManagementMAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MedicalPracticeManagementMAUI">

    <!-- Main page -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Manage Patients page -->
    <ShellContent
        Title="Manage Patients"
        ContentTemplate="{DataTemplate views:PatientsPage}"
        Route="PatientsPage" />

    <!-- Manage Physicians page -->
    <ShellContent
        Title="Manage Physicians"
        ContentTemplate="{DataTemplate views:PhysiciansPage}"
        Route="PhysiciansPage" />

    <!-- Manage Appointments page -->
    <ShellContent
        Title="Manage Appointments"
        ContentTemplate="{DataTemplate views:AppointmentsPage}"
        Route="AppointmentsPage" />

</Shell>